<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>News Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to DevLand</h1>

    <h2>
      Where Developers and Businesses Meet
    </h2>

    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
  <div class="row">
    <div class="col-md-4">
      <h1>Show Your Skills</h1>
    </div>
    <div class="col-md-4">
      <h1>Connect With Others</h1>
    </div>
    <div class="col-md-4">
      <h1>Share Your Projects</h1>
    </div>
  </div>
 
<% end %>